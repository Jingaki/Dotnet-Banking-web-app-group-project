@model DepositBankingWebApp.Models.Deposit

<h4>SearchResult</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input type="checkbox" for="SearchCheckStandartDeposit" class="form-check-input" /> IsStandardTermDeposit
                </label>
            </div>

            <div class="form-group">
                <label for="SearchSum" class="control-label"></label>
                <input name="SearchSum" class="form-control" />
            </div>

            <div class="form-group">
                <label for="SearchCurrencyType" class="control-label"></label>
                <select for="SearchCurrencyType" class="form-control" asp-items="Html.GetEnumSelectList<CurrencyType>()">
                    <option value="">All</option>
                </select>
            </div>

            <div class="form-group">
                <label for="SearchInterestPaymentType" class="control-label"></label>
                <select for="SearchInterestPaymentType" class="form-control" asp-items="Html.GetEnumSelectList<InterestPaymentType>()">
                    <option value="">All</option>
                </select>
            </div>

            <div class="form-group">
                <label for="SearchOwnershipType" class="control-label"></label>
                <select for="SearchOwnershipType" class="form-control" asp-items="Html.GetEnumSelectList<OwnershipType>()">
                    <option value="">All</option>
                </select>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input type="checkbox" for="SearchCheckTimeDeposit" class="form-check-input" /> additionalSumsDurringPeriod
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input type="checkbox" for="SearchCheckOverdraft" class="form-check-input" /> Overdraft
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input type="checkbox" for="SearchCheckCredit" class="form-check-input" /> Credit
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
